{% comment %}
Shopify Wishlist
Usage:
- Markup: {%- render 'button-wishlist', product: product -%}
- Place this snippet inside your existing product card snippet

Parameters:
- product: <Shopify product> (required)
{% endcomment %}

  <style scoped>
    .icon {
      transition: fill 0.3s ease;
      display: inline-block;
      width: 20px;
      height: 20px;
      vertical-align: middle;
    }

    /* .active .icon {
      fill: #988b6a;
      stroke: #000000;
    } */

    svg.icon.icon-heart path {
      fill: transparent;
    }
    .active svg.icon.icon-heart path {
      fill: rgba(var(--color-button),var(--alpha-button-background));
    }
    button.wishlist_btn {
      height: 5rem;
      width: 5rem;
      border-radius: 50%;
      border: 1px solid rgba(var(--color-foreground), 0.20);

    }

    button.wishlist_btn:hover {
      box-shadow: none!important;
      border-width: 2px;
    }
    span.wishlist-text {
      padding-right: 10px;
    }
  </style>

{%- if product.handle != blank -%}
{%- if customer -%}
<button type="button" aria-label="Add to wishlist" class="wishlist_btn button button--full-width button--secondary"  button-wishlist
        data-product-image="{{ product.featured_image | image_url: width: 100 }}"
        data-product-vendor="{{ product.vendor }}"
        data-product-price="{{ product.price | money }}"
        data-product-handle="{{ product.handle }}"
        data-product-title="{{ product.title }}"
        >

    <span class="wishlist-wrapper"> {%- render 'icon-heart-collection' -%} </span>
</button>
{%- else -%}
<button type="button" aria-label="Add to wishlist" class="wishlist_btn" onclick="window.location='/account/login';">
 {%- render 'icon-heart' -%}
</button>
{%- endif -%}
{%- endif -%}
