{% comment %}theme-check-disable TemplateLength{% endcomment %}
<section id="MainProduct-{{ section.id }}" class="page-width-product">
  {{ 'section-main-product.css' | asset_url | stylesheet_tag }}
  {{ 'component-accordion.css' | asset_url | stylesheet_tag }}
  {{ 'component-price.css' | asset_url | stylesheet_tag }}
  {{ 'component-rte.css' | asset_url | stylesheet_tag }}
  {{ 'component-slider.css' | asset_url | stylesheet_tag }}
  {{ 'component-deferred-media.css' | asset_url | stylesheet_tag }}
  {{ 'component-cart-notification.css' | asset_url | stylesheet_tag }}

  {% style %}
        .slider-button, .slider-button .icon {
      background-color: {{ settings.colors_slider_button_background }}!important;
      stroke: {{ settings.colors_slider_button }}!important;
      color: {{ settings.colors_slider_button }}!important;
    }
    .slider-button {
    background-color: {{ settings.colors_slider_button_background }};
    color: {{ settings.colors_slider_button }};
    }
    .mainSlider-image button.slider-counter__link.slider-counter__link--dot .dot {
      background: {{ settings.colors_slider_button_background }};
    }
    .mainSlider-image button.slider-counter__link.slider-counter__link--dot.link.slider-counter__link--active .dot {
      background: {{ settings.colors_slider_button }};
    }

    	.sale-badge {
    		background-color: {{ settings.sale_badge_color_background }};
        border: 0;
        color: {{ settings.sale_badge_color_text }};

    	}

      .other-badge {
    		background-color: #000;
        border: 0;
        color: #fff;margin-right:10px;
    	}

      .sold-badge {
    		background-color: {{ settings.sold_badge_color_background }};
        border: 0;
        color: {{ settings.sold_badge_color_text }};
    	}
  {% endstyle %}
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

  {%- assign first_3d_model = product.media | where: 'media_type', 'model' | first -%}
  {%- if first_3d_model -%}
    {{ 'component-product-model.css' | asset_url | stylesheet_tag }}
    <link
      id="ModelViewerStyle"
      rel="stylesheet"
      href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
      media="print"
      onload="this.media='all'"
    >
    <link
      id="ModelViewerOverride"
      rel="stylesheet"
      href="{{ 'component-model-viewer-ui.css' | asset_url }}"
      media="print"
      onload="this.media='all'"
    >
  {%- endif -%}

  <div class="product product--{{ section.settings.media_size }} product--{{ section.settings.gallery_layout }} grid grid--1-col {% if product.media.size > 0 %}grid--1-col-tablet{% else %}product--no-media{% endif %} product--{{ section.settings.media_position }} ">
    <div class="grid__item product__media-wrapper {% if section.settings.media_position == 'right' %} medium-hide large-up-hide{% endif %}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'title' -%}
            <div class="product-heading-container-mobile" {{ block.shopify_attributes }}>
              <h1 class="product__title">
                {{ product.title | escape }}
              </h1>
            </div>
          {%- when 'text' -%}
            <div class="product-heading-container-mobile" {{ block.shopify_attributes }}>
              <p
                class="product__text{% if block.settings.text_style == 'uppercase' %} caption-with-letter-spacing{% elsif block.settings.text_style == 'subtitle' %} subtitle{% endif %}"
                {{ block.shopify_attributes }}
              >
                {{- block.settings.text -}}
              </p>
            </div>
          {%- when 'price' -%}
            <div class="product-heading-container-mobile" {{ block.shopify_attributes }}>
              <div class="no-js-hidden" id="price-{{ section.id }}">
                {%- render 'price',
                  product: product,
                  use_variant: true,
                  show_badges: false,
                  price_class: 'price--large'
                -%}
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}

      {%- render 'product-media-gallery', product: product, use_variant: true -%}
    </div>
    <div class="product__info-wrapper grid__item{% if settings.page_width > 1400 and section.settings.media_size == "small" %} product__info-wrapper--extra-padding{% endif %}">
      <div id="ProductInfo-{{ section.id }}" class="product__info-container">
        {%- assign product_form_id = 'product-form-' | append: section.id -%}
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when '@app' -%}
              {% render block %}

            {%- when 'text' -%}
              <div class="product-heading-container" {{ block.shopify_attributes }}>
                <p
                  class="product__text{% if block.settings.text_style == 'uppercase' %} caption-with-letter-spacing{% elsif block.settings.text_style == 'subtitle' %} subtitle{% endif %}"
                  {{ block.shopify_attributes }}
                >
                  {{- block.settings.text -}}
                </p>
              </div>
            {%- when 'title' -%}
              <div class="product-heading-container" {{ block.shopify_attributes }}>
                <h1 class="product__title">
                  {{ product.title | escape }}
                </h1>
              </div>
            {%- when 'price' -%}
              <div class="product-heading-container" {{ block.shopify_attributes }}>
                <div class="no-js-hidden" id="price-{{ section.id }}" {{ block.shopify_attributes }}>
                  {%- render 'price',
                    product: product,
                    use_variant: true,
                    show_badges: false,
                    price_class: 'price--large'
                  -%}
                </div>
              </div>
            {%- when 'delivery' -%}
              <div class="estimated-delivery-container" {{ block.shopify_attributes }}>
                {% assign date = block.settings.delivery_timer | times: 86400 %}
                {% assign nextdate = block.settings.delivery_timer_2 | times: 86400 %}
                <p>
                  {{ block.settings.delivery_text }}
                  <strong>
                    {{- 'now' | date: '%s' | plus: date | date: '%b %d' }} and
                    {{ 'now' | date: '%s' | plus: nextdate | date: '%b %d' -}}
                  </strong>
                </p>
              </div>

            {%- when 'inventory' -%}
              {% assign inventoryThreshold = block.settings.inventory_threshold | plus: 0 %}
              {% assign first_available_variant_qty = product.selected_or_first_available_variant.inventory_quantity
                | plus: 0
              %}
              <script type="text/javascript">
                 {% capture iconInStock %}
                 <div class="icon-wrapper">{% render 'icon-in-stock' %}</div>
                 <span class="stock-text">In stock, ready to ship</span>
                {% endcapture %}
                {% capture IconRemainingStock %}
                   <div class="icon-wrapper">{% render 'icon-stopwatch' %}</div>
                {% endcapture %}
                {% capture IconOutOfStock %}
                 <div class="icon-wrapper">{% render 'icon-outofstock' %}</div>
                 <span class="stock-text ">Out of Stock</span>
                {% endcapture %}
                 var inventoryThreshold = {{ inventoryThreshold | json }};
                 var stock = {{ iconInStock | strip_newlines | json }};
                 var lowStock = {{ IconRemainingStock | strip_newlines | json }};
                 var outOfStock = {{ IconOutOfStock | strip_newlines | json }};
                var inv_qty = {};
                {% for var in product.variants %}
                  inv_qty[{{- var.id -}}] = {{ var.inventory_quantity | default: 0 }};
                {% endfor %}

                   console.log('inventoryThreshold = ',inventoryThreshold)
              </script>

              <div
                class="inventory-container {% if first_available_variant_qty <= inventoryThreshold %}remaining-stock-container {% endif %} {% if first_available_variant_qty == 0 %}out-of-stock{% endif %}{% if first_available_variant_qty > inventoryThreshold %}in-stock{% endif %} "
                {{ block.shopify_attributes }}
              >
                {% if first_available_variant_qty > inventoryThreshold %}
                  {% if product.available %}
                    <div class="icon-wrapper">{% render 'icon-in-stock' %}</div>
                    <span class="stock-text">In stock, ready to ship</span>
                  {% endif %}
                {% else %}
                  {% if first_available_variant_qty > 0 %}
                    <div class="icon-wrapper">{% render 'icon-stopwatch' %}</div>
                    <span class="stock-text">
                      Only <strong id="qty_inventory_track">{{- first_available_variant_qty -}}</strong> Left in Stock
                    </span>
                  {% else %}
                    <div class="icon-wrapper">{% render 'icon-outofstock' %}</div>
                    <span class="stock-text ">Out of Stock</span>
                  {% endif %}
                {% endif %}
              </div>

              <div>
                {%- assign product_form_installment_id = 'product-form-installment-' | append: section.id -%}
                {%- form 'product', product, id: product_form_installment_id, class: 'installment caption-large' -%}
                  <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                  {{ form | payment_terms }}
                {%- endform -%}
              </div>

            {%- when 'description' -%}
              {%- if product.description != blank -%}
                <div class="product__description rte" {{ block.shopify_attributes }}>
                  {% if product.metafields.custom.short_description != blank %}
                    {{ product.metafields.custom.short_description.value }}
                  {% else %}
                    {{ product.description | truncatewords: 50 | strip_html }}
                  {% endif %}
                  <br>
                  <a href="#product__info-container" class="click-to-description">View Product Details</a>
                </div>
              {%- endif -%}
            {%- when 'custom_liquid' -%}
              {% if block.settings.custom_liquid %}
                <div class="custom_div" {{ block.shopify_attributes }}>
                  {{ block.settings.custom_liquid }}
                </div>
              {% endif %}
              {% comment %}
                {%- when 'collapsible_tab' -%}
                <div class="product__accordion accordion" {{ block.shopify_attributes }}>
                  <details>
                    <summary>
                      <div class="summary__title">
                        {% render 'icon-accordion', icon: block.settings.icon %}
                        <h2 class="h3 product_accordion__title">
                          {{ block.settings.heading | default: block.settings.page.title }}
                        </h2>
                        {% if block.settings.enable_review -%}
                          <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
                        {%- endif %}
                        {% if block.settings.enable_description -%}
                          <span class="shopify-product-description" data-id="{{ product.id }}"></span>
                        {%- endif %}
                      </div>
                      {% render 'icon-caret' %}
                    </summary>
                    <div class="accordion__content rte">
                      <p>{{ block.settings.content }}</p>
                      <p>{{ block.settings.page.content }}</p>
                      {% if block.settings.enable_review %}
                        <div id="shopify-product-reviews" data-id="{{ product.id }}">
                          {{ product.metafields.spr.reviews }}
                        </div>
                      {% endif %}
                      {% if block.settings.enable_description %}
                        <div id="shopify-product-description" data-id="{{ product.id }}">
                          {{ product.description }}
                        </div>
                        </span>
                      {% endif %}
                    </div>
                  </details>
                </div>
              {% endcomment %}

            {%- when 'in-stock-notification' -%}
              {% if product.available %}
                <div class="instock-pulse" {{ block.shopify_attributes }}>
                  <span class="icon--pulsing">{% render 'icon-in-stock' %}</span>
                  <span>{{ block.settings['in-stock-notification'] }}</span>
                </div>
              {% endif %}

            {%- when 'custom-message' -%}
              <div class="custom-message-container " {{ block.shopify_attributes }}>
                <input type="checkbox" id="add-engraving">

                {%- capture engraving_price_in_default_currency -%}
                {{ block.settings.engraving_price }}
              {%- endcapture -%}

                {%- assign engraving_price = engraving_price_in_default_currency | times: 100 -%}

                <label for="add-engraving">
                  {{- block.settings['custom-message-check'] }} + {{ engraving_price | money_with_currency -}}
                </label>
                <div class="custom-message-box">
                  <label for="custom-message" class="custom-message-text">
                    {{- block.settings['custom-message-text'] -}}
                  </label>
                  <div class="field">
                    <textarea
                      id="custom-message"
                      class="text-area field__input"
                      placeholder="Message"
                      name="properties[Message]"
                      form="product-form-{{ section.id }}"
                    ></textarea>
                  </div>
                </div>
              </div>

            {%- when 'quantity_selector' -%}
              <div class="product-form__input product-form__quantity" {{ block.shopify_attributes }}>
                <label class="form__label" for="Quantity-{{ section.id }}">
                  {{ 'products.product.quantity.label' | t }}
                </label>
                <quantity-input class="quantity">
                  <!-- Class name btn-minus added -->
                  <button class="quantity__button no-js-hidden btn-minus" name="minus" type="button">
                    <span class="visually-hidden">
                      {{- 'products.product.quantity.decrease' | t: product: product.title | escape -}}
                    </span>
                    {% render 'icon-caret' %}
                  </button>
                  <input
                    class="quantity__input"
                    type="number"
                    name="quantity"
                    id="Quantity-{{ section.id }}"
                    min="1"
                    value="1"
                    form="product-form-{{ section.id }}"
                  >
                  <!-- Class name btn-plus added -->
                  <button class="quantity__button no-js-hidden btn-plus" name="plus" type="button">
                    <span class="visually-hidden">
                      {{- 'products.product.quantity.increase' | t: product: product.title | escape -}}
                    </span>
                    {% render 'icon-caret' %}
                  </button>
                </quantity-input>
              </div>

            {%- when 'customer-viewing' -%}
              {% assign random_number = 'now' | date: '%s' | modulo: 50 | plus: 2 %}
              <div class="viewers-counter" {{ block.shopify_attributes }}>
                {% render 'icon-view' %}
                <span
                  ><b>{{ random_number }} people looking at this</b></span
                >
              </div>

            {%- when 'popup' -%}
              <modal-opener
                class="product-popup-modal__opener no-js-hidden"
                data-modal="#PopupModal-{{ block.id }}"
                {{ block.shopify_attributes }}
              >
                <button
                  id="ProductPopup-{{ block.id }}"
                  class="product-popup-modal__button link"
                  onclick="appendPrice()"
                  type="button"
                  aria-haspopup="dialog"
                >
                  {{ block.settings.link_label | default: block.settings.page.title }}
                </button>
              </modal-opener>
              <a href="{{ block.settings.page.url }}" class="product-popup-modal__button link no-js">
                {{- block.settings.link_label -}}
              </a>

            {%- when 'Payment-banner' -%}
              <div class="payment-banner" {{ block.shopify_attributes }}>
                <modal-dialog id="ffPopupModal-{{ block.id }}" class="product-popup-modal">
                  <div role="dialog" aria-label="{{ block.settings.link_label }}" aria-modal="true" class="product-popup-modal__content" tabindex="-1">
                    <button id="ModalClose-{{ block.id }}" type="button" class="product-popup-modal__toggle btn_custm" aria-label="{{ 'accessibility.close' | t }}">
                      {% render 'icon-close' %}
                    </button>
                    <div class="product-popup-modal__content-info">
                      <h1 class="h2">{{ block.settings.payment_type }}</h1>
                      <p>{{ block.settings.page.content }}</p>
                    </div>
                    <div id="cstm_link_append"></div>
                  </div>
                </modal-dialog>
                <modal-opener class="product-popup-modal__opener " data-modal="#PopupModal-{{ block.id }}">
                  {%- liquid
                    assign payment_months = block.settings.payment_months
                    if product.has_only_default_variant
                      capture my_price
                        echo product.price
                      endcapture
                    else
                      for variant in product.variants
                        if product.selected_or_first_available_variant.id == variant.id
                          capture my_price
                            echo variant.price
                          endcapture
                        endif
                      endfor
                    endif
                  -%}

                  <div class="klarna-wrapper" role="dialog" tabindex="-1" aria-label="Payment banner" aria-modal="true">
                    Make {{ block.settings.payment_months }} payments of
                    {% if product.has_only_default_variant %}
                      <span class="installment">
                        {{- product.price | divided_by: block.settings.payment_months | money -}}
                      </span>
                    {% else %}
                      {% for variant in product.variants %}
                        <span
                          {% if product.selected_or_first_available_variant.id == variant.id %}
                            style="display:inline-block;"
                          {% else %}
                            style="display:none;"
                          {% endif %}
                          class="installment test2"
                          id="{{ variant.id }}"
                        >
                          {{- variant.price | divided_by: block.settings.payment_months | money -}}
                        </span>
                      {% endfor %}
                    {% endif %}

                    with&nbsp
                    {%- if block.settings.payment_type == 'klarna' -%}
                      <img
                        src="{{ 'Klarna-logo.svg' | asset_url }}"
                        class="klarna-logo"
                        width="50"
                        height=""
                        loading="lazy"
                        alt="klarna logo"

                      >&nbsp
                    {%- endif -%}
                    {%- if block.settings.payment_type == 'ShopPay' -%}
                      <img
                        src="{{ 'Shoppay-logo.svg' | asset_url }}"
                        class="shoppay-logo"
                        width="65"
                        height="15.6"
                        loading="lazy"
                        alt="shoppay logo"

                      >.&nbsp
                    {%- endif -%}
                    {%- if block.settings.payment_type == 'Paypal' -%}
                      <img
                        src="{{ 'Paypal-logo.svg' | asset_url }}"
                        class="paypal-logo"
                        width="60"
                        height="15.6"
                        loading="lazy"
                        alt="paypal logo"

                      >.&nbsp
                    {%- endif -%}

                    <button
                      id="ProductPopup-{{ block.id }}"
                      class="product-popup-modal__button link btn_link"
                      onclick="appendPrice()"
                      type="button"
                      aria-haspopup="dialog"
                    >
                      {{ block.settings.klarna_label | default: block.settings.page.title }}
                    </button>
                  </div>
                </modal-opener>
                <a
                  href="{{ block.settings.page.url }}"
                  id="ProductPopup-{{ block.id }}"
                  class="product-popup-modal__button link no-js"
                >
                  {{- block.settings.klarna_label -}}
                </a>
              </div>

            {%- when 'share' -%}
              <div>
                <ul class="list-unstyled list-social-pdp" role="list">
                  {%- if settings.social_twitter_link != blank -%}
                    <li class="list-social__item">
                      <a
                        href="{{ settings.social_twitter_link }}"
                        class="list-social__link social_link_page"
                        aria-describedby="a11y-external-message"
                      >
                        {%- render 'icon-twitter' -%}
                        <span class="visually-hidden">{{ 'general.social.links.twitter' | t }}</span>
                      </a>
                    </li>
                  {%- endif -%}
                  {%- if settings.social_facebook_link != blank -%}
                    <li class="list-social__item">
                      <a
                        href="{{ settings.social_facebook_link }}"
                        class="list-social__link social_link_page"
                        aria-describedby="a11y-external-message"
                      >
                        {%- render 'icon-facebook' -%}
                        <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
                      </a>
                    </li>
                  {%- endif -%}
                  {%- if settings.social_pinterest_link != blank -%}
                    <li class="list-social__item">
                      <a
                        href="{{ settings.social_pinterest_link }}"
                        class="list-social__link social_link_page"
                        aria-describedby="a11y-external-message"
                      >
                        {%- render 'icon-pinterest' -%}
                        <span class="visually-hidden">{{ 'general.social.links.pinterest' | t }}</span>
                      </a>
                    </li>
                  {%- endif -%}
                  {%- if settings.social_instagram_link != blank -%}
                    <li class="list-social__item">
                      <a
                        href="{{ settings.social_instagram_link }}"
                        class="list-social__link social_link_page"
                        aria-describedby="a11y-external-message"
                      >
                        {%- render 'icon-instagram' -%}
                        <span class="visually-hidden">{{ 'general.social.links.instagram' | t }}</span>
                      </a>
                    </li>
                  {%- endif -%}
                  {%- if settings.social_tiktok_link != blank -%}
                    <li class="list-social__item">
                      <a
                        href="{{ settings.social_tiktok_link }}"
                        class="list-social__link social_link_page"
                        aria-describedby="a11y-external-message"
                      >
                        {%- render 'icon-tiktok' -%}
                        <span class="visually-hidden">{{ 'general.social.links.tiktok' | t }}</span>
                      </a>
                    </li>
                  {%- endif -%}
                  {%- if settings.social_tumblr_link != blank -%}
                    <li class="list-social__item">
                      <a
                        href="{{ settings.social_tumblr_link }}"
                        class="list-social__link social_link_page"
                        aria-describedby="a11y-external-message"
                      >
                        {%- render 'icon-tumblr' -%}
                        <span class="visually-hidden">{{ 'general.social.links.tumblr' | t }}</span>
                      </a>
                    </li>
                  {%- endif -%}
                  {%- if settings.social_snapchat_link != blank -%}
                    <li class="list-social__item">
                      <a
                        href="{{ settings.social_snapchat_link }}"
                        class="list-social__link social_link_page"
                        aria-describedby="a11y-external-message"
                      >
                        {%- render 'icon-snapchat' -%}
                        <span class="visually-hidden">{{ 'general.social.links.snapchat' | t }}</span>
                      </a>
                    </li>
                  {%- endif -%}
                  {%- if settings.social_youtube_link != blank -%}
                    <li class="list-social__item">
                      <a
                        href="{{ settings.social_youtube_link }}"
                        class="list-social__link social_link_page"
                        aria-describedby="a11y-external-message"
                      >
                        {%- render 'icon-youtube' -%}
                        <span class="visually-hidden">{{ 'general.social.links.youtube' | t }}</span>
                      </a>
                    </li>
                  {%- endif -%}
                  {%- if settings.social_vimeo_link != blank -%}
                    <li class="list-social__item">
                      <a
                        href="{{ settings.social_vimeo_link }}"
                        class="list-social__link social_link_page"
                        aria-describedby="a11y-external-message"
                      >
                        {%- render 'icon-vimeo' -%}
                        <span class="visually-hidden">{{ 'general.social.links.vimeo' | t }}</span>
                      </a>
                    </li>
                  {%- endif -%}
                </ul>
              </div>

            {%- when 'variant_picker' -%}
              {%- unless product.has_only_default_variant -%}
                {%- if block.settings.picker_type == 'button' -%}
                  <variant-radios
                    id="variant_radios"
                    class="no-js-hidden"
                    data-section="{{ section.id }}"
                    data-url="{{ product.url }}"
                    {{ block.shopify_attributes }}
                  >
                    {%- for option in product.options_with_values -%}
                      <fieldset class="js product-form__input {{ option.name }}">
                        {%- if block.settings.show_color_swatch -%}
                          {%- if option.name == 'Color' -%}
                            <legend class="form__label h4 618">{{ option.name }}</legend>
                            {%- for value in option.values -%}
                              <input
                                type="radio"
                                id="{{ section.id }}-{{ option.name }}-{{ forloop.index0 }}"
                                name="{{ option.name }}"
                                value="{{ value | escape }}"
                                form="product-form-{{ section.id }}"
                                {% if option.selected_value == value %}
                                  checked
                                {% endif %}
                              >
                              <label for="{{ section.id }}-{{ option.name }}-{{ forloop.index0 }}" class="swatch-label">
                                {% assign present_color = value | handleize %}
                                <div class="swatch-item color-{{- present_color -}}"></div>
                              </label>
                            {%- endfor -%}
                          {%- endif -%}
                        {%- endif -%}
                        {%- if option.name == 'Engraving' -%}
                          {%- for value in option.values -%}
                            {%- if value == 'Yes' -%}
                              <div class="checkbox-container">
                                <input
                                  type="checkbox"
                                  id="{{ section.id }}-{{ value | handle }}"
                                  name="{{ option.name }}"
                                  value="{{ value | escape }}"
                                  form="product-form-{{ section.id }}"
                                  {% if option.selected_value == value %}
                                    checked
                                  {% endif %}
                                >
                                <input
                                  type="checkbox"
                                  style="display:none;"
                                  id="{{ section.id }}-{{ value | handle }}"
                                  name="{{ option.name }}"
                                  value="No"
                                  form="product-form-{{ section.id }}"
                                  checked
                                >

                                <label for="{{ section.id }}-{{ value | handle }}" class="checkbox-label add-engraving">
                                  <legend class="form__label label-text h4">
                                    Add {{ option.name }} + {{ 2000 | money }}
                                  </legend>
                                </label>

                                <!-- Add the textarea for custom message. Adjust this condition as needed. -->
                                <div
                                  class="custom-message-box"
                                  id="message-box-{{ section.id }}-{{ option.name }}-{{ forloop.index0 }}"
                                >
